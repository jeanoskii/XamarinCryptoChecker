<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PreFinalProject.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Register an Account" FontSize="24"></Label>
            <Entry x:Name="entUsername" Placeholder="Username"/>
            <Entry x:Name="entPassword" Placeholder="Password" IsPassword="true"/>
            <Button x:Name="btnRegister" Clicked="btnRegister_Clicked" Text="Register"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>